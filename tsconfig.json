{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "outDir": "./dist/",
    "rootDir": "./nodes",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./"]
  },
  "include": ["nodes/**/*", "types.d.ts"],
  "exclude": ["node_modules/**/*", "**/*.spec.ts"]
} 